{
    "name": "webuni/composer-yaml-plugin",
    "description": "Composer plugin to convert a composer.yaml to json or vice-versa.",
    "type": "composer-plugin",
    "keywords": [
        "composer",
        "yaml"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Haso≈à",
            "email": "martin.hason@gmail.com"
        },
        {
            "name": "Webuni s.r.o.",
            "homepage": "https://www.webuni.cz"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "symfony/yaml": "^2.8 || ^3.0",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.3",
        "symfony/var-dumper": "^3.0",
        "friendsofphp/php-cs-fixer": "^1.11",
        "sllh/php-cs-fixer-styleci-bridge": "^2.0",
        "composer/composer": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Webuni\\ComposerYamlPlugin\\": "src"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix",
        "tests": "vendor/bin/phpunit --colors=always"
    },
    "extra": {
        "class": "Webuni\\ComposerYamlPlugin\\Plugin",
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    }
}
